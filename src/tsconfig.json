{
  "compilerOptions": {
    "target": "ES2017",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "./node_modules/tns-core-modules/*",
        "./node_modules/*"
      ]
    },
    "lib": [
      "es6",
      "dom"
    ]
  },
  "exclude": [
    "typings",
    "node_modules",
    "platforms"
  ]
}
